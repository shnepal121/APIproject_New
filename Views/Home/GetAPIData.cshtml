<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style type="text/css">
        html,
        body {
            height: 100%;
        }

        body {
            background-image: url('/img/image2.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body text="#F3F3F3" link="#2CA824" vlink="#000000" alink="#0E28E1" leftmargin="10" topmargin="30" marginwidth="10" marginheight="30" width="600" height="400">
    <table width="100%" border="0">
        <tbody>
            <tr>
                <td>
                    <table width="100%" height="15%" border="0">
                        <tbody>
                            <tr align="center">
                                <td><h1>@ViewBag.TopAttraction</h1></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td height="578">
                    <p>&nbsp;</p>
                    <table width="100%" height="100%" border="0" border-style: solid;>
                        <tbody>
                            <tr>
                                <th>Attaction Name</th>
                                <th>Address</th>
                                <th>Rating Count</th>
                                <th>Google Location Id</th>
                            </tr>
                            @foreach (APIproject.Models.Root p in Model)
                            {
                                @foreach (ResultsItem r in p.results)
                                {
                        <tr>
                            <td align="left">
                                @r.name
                            </td>
                            <td align="left">
                                @r.formatted_address
                            </td>
                            <td align="left">
                                @r.user_ratings_total
                            </td>
                            <td align="left">
                                @r.place_id
                            </td>
                        </tr>
                                }
                            }
                        </tbody>
                    </table>
    </table>
</body>
</html>
