<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style type="text/css">
        html,
        body {
            height: 100%;
        }

        body {
            background-image: url('/img/image1.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<div class="text-center">
    <section>
        <table width="100%" height="15%" border="0">
            <tbody>
                <tr align="center">
                    <td><h1>Places to see</h1></td>
                </tr>
            </tbody>
        </table>
    </section>
</div>
<div class="text-center">
    <section>
        @using (Html.BeginForm("GetAPIData", "DataBaseProject", FormMethod.Post))
        {
            <table width="360" height="243" border="0" align="center">
                <tbody>
                    <tr>
                        <td><strong>Destination Name:</strong></td>
                        <td width="152"><input type="text" name="user1" id="user1"></td>
                    </tr>
                    <tr>
                        <td><strong>Interests</strong></td>
                        <td colspan="2">
                            <input type="checkbox" name="nature" id="nature">
                            <label for="checkbox">
                                <strong>Nature </strong>
                                <input type="checkbox" name="city" id="city">
                                <strong>City </strong>
                                <input type="checkbox" name="outdoor" id="outdoor">
                                <strong> Outdoor </strong>
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="submit" name="submit" id="submit" value="Places to See"> </td>
                    </tr>
                </tbody>
            </table>

        }
    </section>
</div>
</html>
