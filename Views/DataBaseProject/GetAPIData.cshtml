<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style type="text/css">
        html,
        body {
            height: 100%;
        }

        body {
            background-image: url('/img/image2.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<div class="text-center">
    <section>
        <table width="100%" height="15%" border="0">
            <tbody>
                <tr align="center">
                    <td><h1>@ViewBag.TopAttraction</h1></td>
                </tr>
            </tbody>
        </table>
    </section>
</div>
<div class="text-center">
    <section>
        <table width="100%" height="100%" border="0" border-style: solid;>
            <tr>
                <th>Attaction Name</th>
                <th>Address</th>
                <th>Rating Count</th>
                <th>Google Location Id</th>
            </tr>
            @foreach (APIproject.Models.Root p in Model)
            {
                @foreach (ResultsItem r in p.results)
                {
                    <tr>
                        <td align="left">
                            @r.name
                        </td>
                        <td align="left">
                            @r.formatted_address
                        </td>
                        <td align="left">
                            @r.user_ratings_total
                        </td>
                        <td align="left">
                            @r.place_id
                        </td>
                    </tr>
                }
            }
        </table>
    </section>
</div>
</html>
